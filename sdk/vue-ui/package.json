{
  "name": "@nlui/vue-ui",
  "version": "0.1.0",
  "description": "NLUI Vue UI Components",
  "main": "./dist/vue-ui.umd.js",
  "module": "./dist/vue-ui.es.js",
  "types": "./dist/vue-ui/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/vue-ui/src/index.d.ts",
      "import": "./dist/vue-ui.es.js",
      "require": "./dist/vue-ui.umd.js"
    },
    "./styles": "./dist/style.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "vite build && vue-tsc -p tsconfig.build.json --declaration --emitDeclarationOnly",
    "dev": "vite build --watch"
  },
  "keywords": [
    "nlui",
    "vue",
    "ui",
    "components",
    "chat",
    "ai"
  ],
  "author": "ZacharyZcR",
  "license": "MIT",
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "dependencies": {
    "@nlui/client": "workspace:*",
    "@nlui/vue": "workspace:*",
    "md-editor-rt": "^6.3.1",
    "lucide-vue-next": "^0.460.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "vite": "^5.0.0",
    "vue": "^3.3.10",
    "vue-tsc": "^2.0.0",
    "typescript": "^5.6.0"
  }
}
