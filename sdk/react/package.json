{
  "name": "@nlui/react",
  "version": "0.1.0",
  "description": "NLUI React Hooks",
  "main": "dist/use-nlui.js",
  "module": "dist/use-nlui.mjs",
  "types": "dist/use-nlui.d.ts",
  "exports": {
    ".": {
      "import": "./dist/use-nlui.mjs",
      "require": "./dist/use-nlui.js",
      "types": "./dist/use-nlui.d.ts"
    }
  },
  "scripts": {
    "build": "tsup use-nlui.ts --format cjs,esm --dts --external react",
    "dev": "tsup use-nlui.ts --format cjs,esm --dts --external react --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "nlui",
    "react",
    "hooks",
    "ai",
    "chat"
  ],
  "author": "ZacharyZcR",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "dependencies": {
    "@nlui/client": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^18.3.0",
    "react": "^18.3.1",
    "tsup": "^8.0.0",
    "typescript": "^5.6.0"
  },
  "files": [
    "dist",
    "README.md"
  ]
}
