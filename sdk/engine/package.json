{
  "name": "@nlui/engine",
  "version": "0.1.0",
  "description": "Pure TypeScript NLUI engine â€” zero backend dependency",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "import": "./dist/react.js",
      "require": "./dist/react.cjs"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup src/index.ts src/react.ts --format esm,cjs --dts --clean --external react",
    "dev": "tsup src/index.ts src/react.ts --format esm,cjs --dts --watch --external react"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": { "optional": true }
  },
  "devDependencies": {
    "@types/react": "^18.3.0",
    "react": "^18.3.1",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0"
  },
  "keywords": ["nlui", "openapi", "llm", "tool-calling", "engine"],
  "license": "MIT"
}
