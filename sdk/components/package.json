{
  "name": "@nlui/components",
  "version": "0.1.0",
  "type": "module",
  "description": "NLUI Web Components - Framework-agnostic UI components",
  "main": "./dist/nlui-components.js",
  "module": "./dist/nlui-components.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/nlui-components.js"
    },
    "./styles": "./dist/nlui-components.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c && tsc -p tsconfig.build.json && node scripts/copy-types.js",
    "dev": "rollup -c --watch"
  },
  "keywords": [
    "nlui",
    "web-components",
    "custom-elements",
    "ui",
    "components",
    "chat",
    "ai"
  ],
  "author": "ZacharyZcR",
  "license": "MIT",
  "dependencies": {
    "@nlui/client": "workspace:*",
    "lit": "^3.1.0",
    "md-editor-rt": "^6.3.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.0",
    "@rollup/plugin-typescript": "^11.1.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "rollup": "^4.9.0",
    "rollup-plugin-postcss": "^4.0.2",
    "typescript": "^5.6.0",
    "tslib": "^2.6.0"
  }
}
